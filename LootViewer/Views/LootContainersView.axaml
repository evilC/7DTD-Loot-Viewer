<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LootViewer.Views.LootContainersView">
	<Border BorderBrush="Gainsboro" BorderThickness="1" Margin="10">
		<!--https://docs.avaloniaui.net/docs/controls/datagrid-->
		<DataGrid Grid.Row="1" Items="{Binding LootContainers}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Container Name" Binding="{Binding Name}" Width="*"/>
			</DataGrid.Columns>
		</DataGrid>
	</Border>
</UserControl>
