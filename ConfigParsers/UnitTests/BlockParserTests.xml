<?xml version="1.0" encoding="utf-8" ?>

<blocks>
	<!--FirstLevelAdd-->
	<block name="FirstLevelAdd-B">
		<drop event="Harvest" name="DropOne" count="1" tag="allHarvest"/>
	</block>

	<block name="FirstLevelAdd-A">
		<property name="Extends" value="FirstLevelAdd-B"/>
	</block>
	
	<!--SecondLevelAdd-->
	<block name="SecondLevelAdd-C">
	</block>

	<block name="SecondLevelAdd-B">
		<property name="Extends" value="SecondLevelAdd-C"/>
		<drop event="Harvest" name="DropOne" count="1" tag="allHarvest"/>
	</block>
	
	<block name="SecondLevelAdd-A">
		<property name="Extends" value="SecondLevelAdd-B"/>
	</block>

	<!--Test that A should remove drop inherited from B-->
	<block name="FirstLevelRemove-B">
		<drop event="Harvest" name="DropOne" count="1" tag="allHarvest"/>
	</block>

	<block name="FirstLevelRemove-A">
		<property name="Extends" value="FirstLevelRemove-B"/>
		<drop event="Harvest" name="DropOne" count="0" tag="allHarvest"/>
	</block>
	
	<!--Test that A should not include drop from C that was removed by B-->
	<block name="SecondLevelRemove-C">
		<drop event="Harvest" name="DropOne" count="1" tag="allHarvest"/>
	</block>

	<block name="SecondLevelRemove-B">
		<property name="Extends" value="SecondLevelRemove-C"/>
		<drop event="Harvest" name="DropOne" count="0" tag="allHarvest"/>
	</block>
	
	<block name="SecondLevelRemove-A">
		<property name="Extends" value="SecondLevelRemove-B"/>
	</block>

	<!--LootList inheritance-->
	<block name="LootListInheritance-B">
		<property name="LootList" value="LootList-B"/>
	</block>

	<block name="LootListInheritance-A">
		<property name="Extends" value="LootListInheritance-B"/>
		<property name="LootList" value="LootList-A"/>
	</block>	
	
</blocks>